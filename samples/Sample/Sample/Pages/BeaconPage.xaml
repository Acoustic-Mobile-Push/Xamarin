<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="Sample.BeaconPage">
	<ContentPage.Content>
		<StackLayout>
			<TableView Intent="Data" HasUnevenRows="true" BackgroundColor="{DynamicResource SecondaryBackgroundColor}">
		        <TableRoot>
		            <TableSection Title="iBeacon Feature">
		      	        <TextCell Text="UUID" x:Name="UUID" TextColor="{DynamicResource PrimaryTextColor}" />
                        <ViewCell>
                            <StackLayout Orientation="Horizontal" Padding="20,0" HorizontalOptions="FillAndExpand" BackgroundColor="{DynamicResource SecondaryBackgroundColor}">
                                <Label HorizontalOptions="FillAndExpand" VerticalOptions="CenterAndExpand" Margin="0" Text="Status" TextColor="{DynamicResource PrimaryTextColor}" />
                                <Button VerticalOptions="CenterAndExpand" x:Name="Status" Margin="0" Text="Status" TextColor="{DynamicResource SecondaryTextColor}" />
                            </StackLayout>
                        </ViewCell>
		            </TableSection>
		            <TableSection Title="iBeacon Major Regions" x:Name="Regions" />
		        </TableRoot>
		    </TableView>
		</StackLayout>
	</ContentPage.Content>
</ContentPage>
